{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["src", "vitest.config.ts", "eslint.config.mjs", "prettier.config.mjs"]
}
